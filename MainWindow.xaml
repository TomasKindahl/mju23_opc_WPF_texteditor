<Window x:Class="opc1_d11_WPF_texteditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:opc1_d11_WPF_texteditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Height="20" VerticalAlignment="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Click="MenuNewSelect"/>
            </MenuItem>            
        </Menu>
        <TextBox HorizontalAlignment="Stretch" Margin="0,20,0,20" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Stretch"/>
        <TextBlock Height="20" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
